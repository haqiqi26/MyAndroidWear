<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.floo.pedometer.ChartActivity"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:weightSum="100"
    android:orientation="vertical"
    android:background="#D8D8D8">
    <!--android:background="@drawable/background"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15">
        <!--TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/timeRecord"
            android:text="APRIL 2015"
            android:textSize="25dp"
            android:gravity="center"
            /-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/platinumCount"
                android:layout_centerVertical="true"
                android:text="0"
                android:gravity="center"
                android:textAlignment="center"
                android:background="@drawable/platinum_notif_back"/>

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/goldCount"
                android:layout_centerVertical="true"
                android:text="12"
                android:textAlignment="center"
                android:layout_toRightOf="@id/platinumCount"
                android:gravity="center"
                android:background="@drawable/gold_notif_back"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="75"
        android:id="@+id/linearChart">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/relative">
            </RelativeLayout>
        </ScrollView>


    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="10">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/chart_level"
                android:layout_marginLeft="50px"
                android:id="@+id/charLevel"/>
            <com.floo.pedometer.MyTextView
                android:layout_width="50px"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:gravity="center_horizontal"
                android:layout_alignBottom="@+id/charLevel"
                android:textSize="10dp"
                android:text="Hours/\nDay"
                android:textStyle="bold"/>

        </RelativeLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </LinearLayout>


</LinearLayout>
