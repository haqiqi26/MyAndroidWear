<com.baoyz.widget.PullRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="100"
            tools:context="com.floo.pedometer.HomeActivity"
            android:background="@color/lightgrey"
            android:soundEffectsEnabled="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:id="@+id/linearTop"
                android:background="#686868">
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinnerDevices"
                    android:theme="@style/Widget.AppCompat.Light.ListView.DropDown"
                    android:layout_alignParentTop="true"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/linearWrapper"
                android:layout_weight="80">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/p1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/adviceMessage"
                        android:text="Try harder.\nGo to the park tomorrow\nto hit your target"
                        android:textAlignment="center"
                        android:textColor="@color/lightgrey"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:visibility="gone"
                        />
                    <com.floo.pedometer.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FitSight"
                        android:textColor="@android:color/black"
                        android:layout_centerHorizontal="true"
                        android:textSize="40dp"
                        android:id="@+id/textHome"
                        />
                    <com.floo.pedometer.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TM"
                        android:textColor="@android:color/black"
                        android:layout_centerHorizontal="true"
                        android:textSize="20dp"
                        android:layout_toRightOf="@id/textHome"
                        android:id="@+id/tm"
                        />

                    <View
                        android:layout_width="270dp"
                        android:layout_height="270dp"
                        android:background="@drawable/circle_grey"
                        android:layout_centerInParent="true"
                        android:id="@+id/circleBack"/>
                    <ProgressBar
                        android:id="@+id/myProgress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="260dp"
                        android:layout_height="260dp"
                        android:max="400"
                        android:progress="0"
                        android:progressDrawable="@drawable/circular_progress"
                        android:layout_centerInParent="true"/>

                    <com.floo.pedometer.CircleView
                        android:id="@+id/pieCircle"
                        android:layout_width="270dp"
                        android:layout_height="270dp"
                        app:cFillColor="@color/chartgrey"
                        app:cStrokeColor="@color/chartgrey"
                        app:cAngleStart="45"
                        app:cAngleEnd="90"
                        android:layout_centerInParent="true"/>
                    <ImageView
                        android:layout_width="320dp"
                        android:layout_height="350dp"
                        android:src="@drawable/home_chart_level"
                        android:layout_centerInParent="true"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/circleBack"
                        android:layout_marginTop="200dp"
                        android:layout_centerHorizontal="true">
                        <com.floo.pedometer.Polygon
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            app:sides="5"
                            app:fill_color="@color/darkgrey"
                            app:fill_percent="100"
                            app:start_angle="90"
                            android:layout_centerInParent="true"
                            android:id="@+id/image2"/>
                        <com.floo.pedometer.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@id/image2"
                            android:layout_alignRight="@id/image2"
                            android:layout_alignTop="@id/image2"
                            android:layout_alignBottom="@id/image2"
                            android:text="TARGET"
                            android:textColor="@android:color/white"
                            android:gravity="center|top"
                            android:textSize="15dp"
                            android:id="@+id/text2"
                            android:layout_marginTop="30dp"/>
                        <com.floo.pedometer.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@id/image2"
                            android:layout_alignRight="@id/image2"
                            android:layout_alignTop="@id/image2"
                            android:layout_alignBottom="@id/image2"
                            android:id="@+id/targetOutdoors"
                            android:text=">3h Today"
                            android:textColor="@android:color/white"
                            android:gravity="center"
                            android:textSize="15dp" />

                    </RelativeLayout>
                    <com.floo.pedometer.Polygon
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        app:sides="5"
                        app:fill_color="@color/lightgrey"
                        app:fill_percent="10"
                        app:start_angle="90"
                        app:stroke_color="@color/lightgrey"
                        android:layout_centerHorizontal="true"
                        android:layout_alignTop="@+id/circleBack"
                        android:id="@+id/poly1"
                        android:layout_marginTop="200dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pull Down to Refresh"
                        android:textColor="@android:color/black"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/pullInfo"
                        android:layout_below="@+id/poly1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last Sync"
                        android:textColor="@android:color/black"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/syncInfo"
                        android:layout_below="@+id/pullInfo"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="100"
                        android:layout_alignRight="@+id/myProgress"
                        android:layout_alignLeft="@+id/myProgress"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_alignBottom="@+id/myProgress"
                        android:layout_alignTop="@+id/myProgress">
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight="60">
                            <com.floo.pedometer.MyTextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/progressText"
                                android:text="0h 0m"
                                android:gravity="center|bottom"
                                android:textSize="45dp"
                                android:textColor="@android:color/black"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight="20">
                            <com.floo.pedometer.MyTextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/resultMessage"
                                android:text="OUTDOORS\nTODAY"
                                android:gravity="center|bottom"
                                android:textSize="18dp"
                                android:textColor="@android:color/black"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight="25"
                            android:weightSum="90">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="30">

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="30">
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="30">
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:weightSum="90">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="30">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/RBLeft">

                        <View
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/circle_grey2"
                            android:layout_centerInParent="true"
                            android:id="@+id/view1"/>
                        <ImageButton
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_centerInParent="true"
                            android:orientation="vertical"
                            android:id="@+id/chartButton"
                            android:background="@drawable/chart_button"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="30">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:id="@+id/RBCenter">
                        <View
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/circle_grey2"
                            android:layout_centerInParent="true"
                            android:id="@+id/view3"/>
                        <ImageButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_centerInParent="true"
                            android:id="@+id/home"
                            android:background="@drawable/home_icon"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="30">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/RBRight">
                        <View
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/circle_grey2"
                            android:layout_centerInParent="true"
                            android:id="@+id/view2"/>
                        <ImageButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_centerInParent="true"
                            android:id="@+id/seedButton"
                            android:background="@drawable/seed_button"/>
                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </ScrollView>
</com.baoyz.widget.PullRefreshLayout>