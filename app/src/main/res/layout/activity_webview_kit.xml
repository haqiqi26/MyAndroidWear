<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context="com.floo.pedometer.HomeActivity"
    android:background="#D8D8D8"
    android:soundEffectsEnabled="true">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="80">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/p1">

            <View
                android:layout_width="290dp"
                android:layout_height="290dp"
                android:background="@drawable/circle_grey2"
                android:layout_centerInParent="true"
                android:id="@+id/circleBack"/>
            <ProgressBar
                android:id="@+id/myProgress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="265dp"
                android:layout_height="265dp"
                android:max="400"
                android:progress="0"
                android:progressDrawable="@drawable/circular_progress"
                android:layout_centerInParent="true"/>
            <com.floo.pedometer.CircleView
                android:id="@+id/pieCircle"
                android:layout_width="290dp"
                android:layout_height="290dp"
                app:cFillColor="#B0B0B0"
                app:cStrokeColor="#B0B0B0"
                app:cAngleStart="45"
                app:cAngleEnd="90"
                android:layout_centerInParent="true"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/circleBack"
                android:layout_marginTop="220dp"
                android:layout_centerHorizontal="true">
                <com.floo.pedometer.Polygon
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    app:sides="5"
                    app:fill_color="#B0B0B0"
                    app:fill_percent="100"
                    app:start_angle="90"
                    android:layout_centerInParent="true"
                    android:id="@+id/image2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/image2"
                    android:layout_alignRight="@id/image2"
                    android:layout_alignTop="@id/image2"
                    android:layout_alignBottom="@id/image2"
                    android:text="TARGET"
                    android:textColor="@color/primary_text_default_material_dark"
                    android:gravity="center|top"
                    android:textSize="15dp"
                    android:id="@+id/text2"
                    android:layout_marginTop="30dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/image2"
                    android:layout_alignRight="@id/image2"
                    android:layout_alignTop="@id/image2"
                    android:layout_alignBottom="@id/image2"
                    android:id="@+id/targetOutdoors"
                    android:text=">3H TODAY"
                    android:textColor="@color/primary_text_default_material_dark"
                    android:gravity="center"
                    android:textSize="17dp" />
                    </RelativeLayout>
            <com.floo.pedometer.Polygon
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:sides="5"
                app:fill_color="#D8D8D8"
                app:fill_percent="10"
                app:start_angle="90"
                app:stroke_color="#D8D8D8"
                android:layout_centerHorizontal="true"
                android:layout_alignTop="@+id/circleBack"
                android:layout_marginTop="220dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="100"
                android:layout_alignRight="@+id/myProgress"
                android:layout_alignLeft="@+id/myProgress"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_alignBottom="@+id/myProgress"
                android:layout_alignTop="@+id/myProgress">

                <!--LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="40">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="TOTAL"
                        android:gravity="center|bottom"
                        android:textSize="20dp"
                        android:textColor="@color/primary_text_default_material_dark"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="10">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="OUTDOORTIME"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:textColor="@color/primary_text_default_material_dark"/>
                </LinearLayout-->
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="60">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/progressText"
                android:text="2H 13M"
                android:gravity="center|bottom"
                android:textSize="50dp"
                android:textColor="@color/primary_text_default_material_dark"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="20">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/resultMessage"
                android:text="OUTDOORS\nTODAY"
                android:gravity="center|bottom"
                android:textSize="20dp"
                android:textColor="@color/primary_text_default_material_dark"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:weightSum="90">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="30">

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="30">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="30">
                </LinearLayout>
        </LinearLayout>
    </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:weightSum="90">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="30">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/circle_grey2"
                    android:layout_centerInParent="true"
                    android:id="@+id/view1"/>
                <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:id="@+id/chartButton"
                    android:background="@drawable/chart_button"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="30">
            <!--RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/centerButton"
                    android:background="@drawable/center_button"/>
            </RelativeLayout-->
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="30">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/circle_grey2"
                    android:layout_centerInParent="true"
                    android:id="@+id/view2"/>
                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    android:id="@+id/seedButton"
                    android:background="@drawable/seed_button"/>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
