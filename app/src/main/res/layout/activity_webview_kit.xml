<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context="com.floo.pedometer.WebviewKit"
    android:background="@drawable/background"
    android:soundEffectsEnabled="true">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="80">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/myProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:max="500"
            android:progress="0"
            android:progressDrawable="@drawable/circular"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="100"
                android:layout_alignRight="@+id/myProgress"
                android:layout_alignLeft="@+id/myProgress"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_alignBottom="@+id/myProgress"
                android:layout_alignTop="@+id/myProgress">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="40">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="TOTAL"
                        android:gravity="center|bottom"
                        android:textSize="20dp"
                        android:textColor="@color/primary_text_default_material_dark"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="10">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="OUTDOORTIME"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:textColor="@color/primary_text_default_material_dark"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="20">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/progressText"
                android:text="2H 13M"
                android:gravity="center|top"
                android:textSize="50dp"
                android:textColor="@color/primary_text_default_material_dark"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="10">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/resultMessage"
                android:text="KEEP GOING!"
                android:gravity="center|top"
                android:textSize="20dp"
                android:textColor="@color/primary_text_default_material_dark"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:weightSum="90">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="30">

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="30">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/diamond"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/image2"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@id/image2"
                            android:layout_alignRight="@id/image2"
                            android:layout_alignTop="@id/image2"
                            android:layout_alignBottom="@id/image2"
                            android:text="TARGET\nOUTDOORS"
                            android:textColor="@color/primary_text_default_material_dark"
                            android:gravity="center|top"
                            android:textSize="10dp"
                            android:id="@+id/text2"
                            android:layout_marginTop="20dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@id/image2"
                            android:layout_alignRight="@id/image2"
                            android:layout_alignTop="@id/image2"
                            android:layout_alignBottom="@id/image2"
                            android:id="@+id/targetOutdoors"
                            android:text="3 HOURS"
                            android:textColor="@color/primary_text_default_material_dark"
                            android:gravity="center"
                            android:textSize="20dp"
                            />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="30">
                </LinearLayout>
        </LinearLayout>
    </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:weightSum="90">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="30">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/circle_grey"
                    android:layout_centerInParent="true"
                    android:id="@+id/view1"/>
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_alignRight="@id/view1"
                    android:layout_alignLeft="@id/view1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_alignBottom="@id/view1"
                    android:layout_alignTop="@id/view1"
                    android:id="@+id/mailButton"
                    android:background="@drawable/mail_button"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="30">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/centerButton"
                    android:background="@drawable/center_button"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="30">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/circle_grey"
                    android:layout_centerInParent="true"
                    android:id="@+id/view2"/>
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignRight="@id/view2"
                    android:layout_alignLeft="@id/view2"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_alignBottom="@id/view2"
                    android:layout_alignTop="@id/view2"
                    android:layout_centerInParent="true"
                    android:id="@+id/userButton"
                    android:background="@drawable/user_button"/>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
