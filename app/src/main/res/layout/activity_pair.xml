<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:background="#ffd8d8d8"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/p1"
            android:layout_weight="0.46"
            android:gravity="bottom">
            <com.floo.pedometer.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FitSight"
                android:textColor="@color/textgrey"
                android:layout_centerHorizontal="true"
                android:textSize="40dp"
                android:id="@+id/textHome"
                />
            <com.floo.pedometer.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TM"
                android:textColor="@color/textgrey"
                android:layout_centerHorizontal="true"
                android:textSize="20dp"
                android:layout_toRightOf="@id/textHome"
                />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff"
        android:weightSum="1"
        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingRight="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:background="#ffffffff">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Pair with your watch"
                android:id="@+id/textView"
                android:textColor="#ff000000"
                android:gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:textSize="30dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="On your watch, swipe to see your watch code"
                android:id="@+id/textView2"
                android:textColor="#ffd8d8d8"
                android:gravity="center_horizontal"
                android:layout_below="@+id/textView"
                android:textSize="17dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Then tap this code when it appears in the list below."
                android:id="@+id/textView3"
                android:layout_below="@+id/textView2"
                android:layout_centerHorizontal="true"
                android:textColor="#ffd8d8d8"
                android:gravity="center_horizontal"
                android:textSize="17dp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="187dp"
        android:background="#ffffffff"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ffffffff">
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#ff50cbc6" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="ROBERT PACHTER&apos;S MACBOOK AIR"
                android:id="@+id/textV1"
                android:textColor="#ff50cbc6"
                android:gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textSize="18dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/textV1"
                android:background="#ff50cbc6" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="YAO&apos;S MACBOOK PRO (2)"
                android:id="@+id/textView4"
                android:textColor="#ff50cbc6"
                android:gravity="center_horizontal"
                android:layout_below="@+id/textV1"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"

                android:layout_centerHorizontal="true" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/textView4"
                android:background="#ff50cbc6" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="TOSHIBA-PC"
                android:id="@+id/textView5"
                android:textColor="#ff50cbc6"
                android:gravity="center_horizontal"
                android:layout_below="@+id/textView4"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/textView5"
                android:background="#ff50cbc6" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="SIMON TRILSBACH MACBOOK AIR"
                android:id="@+id/textView6"
                android:textColor="#ff50cbc6"
                android:gravity="center_horizontal"
                android:layout_below="@+id/textView5"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/textView6"
                android:background="#ff50cbc6" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>