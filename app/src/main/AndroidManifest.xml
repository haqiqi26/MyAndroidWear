<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.floo.pedometer"
    android:installLocation="preferExternal"
    >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.NoActionBar" >
        <activity
            android:hardwareAccelerated="true"
            android:name="com.floo.pedometer.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:hardwareAccelerated="true"
            android:name="com.floo.pedometer.WebviewKit"
            android:label="@string/title_activity_webview_kit"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:hardwareAccelerated="true"
            android:name="com.floo.pedometer.ChartActivity"
            android:label="@string/title_activity_chart"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
